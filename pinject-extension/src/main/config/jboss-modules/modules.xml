<modules xmlns="http://smartics.de/ns/jboss-modules-descriptor/1">
  
  <module name="org.soulwing.pinject.api"> <match>
      <includes>
        <include>
          <groupId>org.soulwing</groupId>
          <artifactId>pinject-api</artifactId>
        </include>
      </includes>
    </match>
    <apply-to-module>
      <dependencies>
        <module name="javax.inject.api" />
        <module name="javax.enterprise.api"/>
        <module name="javax.api" />
      </dependencies>
    </apply-to-module>
  </module>

  <module name="org.soulwing.pinject.extension">
    <match>
      <includes>
        <include>
          <groupId>org.soulwing</groupId>
          <artifactId>pinject-extension</artifactId>
        </include>
      </includes>
    </match>
    <apply-to-module>
      <dependencies>
        <module name="javax.inject.api" />
        <module name="javax.enterprise.api"/>
        <module name="javax.mail.api"/>
        <module name="javax.api" />
      </dependencies>
    </apply-to-module>
  </module>

</modules>
